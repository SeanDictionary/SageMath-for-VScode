{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "SageMath",
    "scopeName": "source.sagemath",
    "fileTypes": ["sage"],
    "firstLineMatch": "^\\s*from\\s+Sage\\b",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.sagemath",
                    "match": "\\b(if|while|for|return)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.sagemath",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.sagemath",
                    "match": "\\\\."
                }
            ]
        }
    }
}